
 <body>
<div class = "bodycoler">
  <div class = "showbody_parent">
    <div class = "show_imageparent">
      <div class = "show_image"style = "background-image: url(<%= @tweet.image %>);"></div>
    </div>

    <div class = "show_textparent">

      <div class = "show_datapa">
        <div class = "showdate"><%= @tweet.created_at %></div>
        <div class = "showtext"><%= simple_format(@tweet.text) %></div>
      </div>
    </div>
  </div>


  <div class = "showcomment">
   <% if current_user%>
    <%=form_with(model: [@tweet,@comment],local: true) do |form|%>
    <%= form.text_area :text %>
    <%= form.submit "投稿する" %>
    <% end %>
   <% else %>
    <p>roguinngahituyou</p>
   <% end %>
  </div>

<% @comments.each do |comment| %>
<div class = "comments_box">
  <div class = "commenter"><%= comment.user.nickname %></div>
  <div class = "comment_date"><%= comment.created_at %></div>
  <div class = "comment_text"><%= comment.text %></div>
</div>
<% end %>

</div>

</body>

